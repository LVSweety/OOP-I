package model;

public class Person {
	private long pe_ID 		= 0;
	private String name 	= "";
	private String surname 	= "";
	private String personID = "";
	
	private static int auto_PE_ID = 0;
	
	public Person (long pe_ID) {
		if(pe_ID == -1) {
			this.pe_ID = auto_PE_ID;
			auto_PE_ID++;
		}else {
			this.pe_ID = pe_ID;
		}
	}
	public Person() {
		this.pe_ID = auto_PE_ID;
		auto_PE_ID++;
		this.name = 	"NULL";
		this.surname = 	"NULL";
	}
	
	public void setName(String name) {
		if(name != null && name.matches("[A-Z]{1}[a-z]+(( [A-Z]{1}[a-z]+)?)+")){
			this.name = name;
		}else {
			this.name = "NULL";
		}
	}
	public void setSurname(String surname) {
		if(surname != null && surname.matches("[A-Z]{1}[a-z]+")){
			this.surname = surname;
		}else {
			this.surname = "NULL";
		}
	}
	public void setPersonID(String personID) {
		if (personID != null && personID.matches("[0-9]{6}-[0-9]{6}")) {
			this.personID = personID;
		} else {
			this.personID = "000000-000000";
		}
		
	}
	public String getName() {
		return name;
	}
	public String getSurname() {
		return surname;
	}
	public String getPersonID() {
		return personID;
	}
}
